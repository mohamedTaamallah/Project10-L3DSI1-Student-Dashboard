<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >


    <EditText
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:hint="Enter file name" />


    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="378dp"
        android:layout_height="543dp"
        android:layout_above="@id/progress_bar"

        android:layout_marginTop="21dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_update"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_android_black_24dp"
        android:text="Update description"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_update"
        android:layout_alignBottom="@+id/button_update"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/button_update"
        android:gravity="center"
        android:text="View Photo "
        android:textSize="16sp" />

</RelativeLayout>