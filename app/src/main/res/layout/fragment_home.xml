<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activites.MatiereDetailsActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_rounded"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/StudentName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/white"
                    android:textSize="45dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="120dp"
                    android:text="Devoir de controle "
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/noteDC"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="350dp"
                    android:text="0 "
                    android:textColor="@color/white"
                    android:textFontWeight="3"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="Devoir de synthese "
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/noteDS"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="350dp"
                    android:text="0 "
                    android:textColor="@color/white"
                    android:textFontWeight="3"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Travail pratique "
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/noteTP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="350dp"
                    android:text="0 "
                    android:textColor="@color/white"
                    android:textFontWeight="3"
                    android:textSize="30dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp">

                    <LinearLayout
                        android:layout_marginLeft="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/EditNote"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="10dp"
                            android:text="Modifer notes "
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:text="Supprimer Notes  "
                            android:textColor="@color/white"
                            android:textSize="15dp" />



                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</FrameLayout>